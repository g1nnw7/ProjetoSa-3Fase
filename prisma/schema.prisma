generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @default(autoincrement())
  nome String
  senha String
  email String @unique
  token Token[]
 
  @@map("usuario")
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String   @db.VarChar(255)
  type      String
  usuarioId Int
  revoked   Boolean  @default(value: false)
  expiresAt DateTime
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("token")
}
model Category {
  id        String    @id @default(cuid())
  nome      String    @unique // ex: "Suplementos", "Snacks Saudáveis", "Orgânicos"
  slug      String    @unique // ex: "suplementos", "snacks-saudaveis"
  products  Product[]

  @@map("categories")
}

model Product {
  id            String    @id @default(cuid())
  nome          String
  slug          String    @unique
  descricao     String    @db.Text
  preco         Float
  imageUrl      String    // URL da imagem do produto
  estoque       Int       @default(0)
  
  // Relação com Categoria
  categoryId String
  category   Category  @relation(fields: [categoryId], references: [id])
  
  // Campos específicos de Nutrição (sugestão)
  calorias      Int?     // Calorias
  proteinas     Float?   // Proteínas (g)
  carboidratos  Float?   // Carboidratos (g)
  gorduras      Float?   // Gorduras (g)
  isGlutenFree  Boolean  @default(false)
  isVegano      Boolean  @default(false)
  isLactoseFree Boolean  @default(false)

  @@map("products")
}
model Alimento {
  id           Int     @id @default(autoincrement())
  nome         String  @unique
  gramas       Float   // Porção base (ex: 100g)
  calorias     Float
  proteinas    Float
  carboidratos Float
  gorduras     Float
  
  @@map("alimentos")
}