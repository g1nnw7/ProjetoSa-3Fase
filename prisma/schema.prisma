generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @default(autoincrement())
  nome String
  senha String
  email String @unique
  token Token[]
 
  @@map("usuario")
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String   @db.VarChar(255)
  type      String
  usuarioId Int
  revoked   Boolean  @default(value: false)
  expiresAt DateTime
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("token")
}
model Category {
  id        String    @id @default(cuid())
  nome      String    @unique
  slug      String    @unique
  products  Product[]

  @@map("categories")
}

model Product {
  id            String    @id @default(cuid())
  nome          String
  slug          String    @unique
  descricao     String    @db.Text
  preco         Float
  imageUrl      String
  estoque       Int       @default(0)
  categoryId String
  category   Category  @relation(fields: [categoryId], references: [id])
  calorias      Int?     
  proteinas     Float?  
  carboidratos  Float?  
  gorduras      Float?  
  isGlutenFree  Boolean  @default(false)
  isVegano      Boolean  @default(false)
  isLactoseFree Boolean  @default(false)

  @@map("products")
}
model Alimento {
  id           Int     @id @default(autoincrement())
  nome         String  @unique
  gramas       Float
  calorias     Float
  proteinas    Float
  carboidratos Float
  gorduras     Float
  
  @@map("alimentos")
}